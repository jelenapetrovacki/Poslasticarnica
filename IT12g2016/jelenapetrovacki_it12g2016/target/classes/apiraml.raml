        description: |
          Bad Request. 
  /{idMaterijal}:
    get:
      responses:
        200:
          body:
            application/json:
              type: MaterijalDataType[]
        400:
          description: |
            Bad Request.
    put:
      body:
        application/json:
          type: MaterijalDataType[]
      responses:
        200:
          body:
            application/json:
              type: MaterijalDataType[]
        400:
          description: |
            Bad Request.
    delete:
      responses:
        200:
